@model IEnumerable<r2bw.Data.User>

@{
    ViewData["Title"] = "Pending Sign ups";
}

<h2>Pending Sign ups</h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Group.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WaiverSignedOn)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WaiverSignedOn)
                </td>
                <td>
                    @using (Html.BeginForm("Approve", "Users", FormMethod.Post)){
                        <input type="hidden" asp-for="@item.Id" name="participantId" />
                        <input type="submit" value="Approve" class="btn btn-default" />
                    } 
                </td>
            </tr>
        }
        </tbody>
    </table>
